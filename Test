#!/bin/bash

# Запрашиваем у пользователя количество файлов для создания
read -p "Введите количество скрытых файлов для создания: " file_count

# Создаем указанное количество скрытых файлов
for (( i=1; i<=file_count; i++ )); do
      touch ~/.hidden_file_$i
done

# Находим все скрытые файлы в домашней директории и сохраняем их имена в файл Result
find ~ -type f -name ".*" > ~/Result
